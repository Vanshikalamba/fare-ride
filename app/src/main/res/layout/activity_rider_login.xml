<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kw.com.ridewithme.RiderLoginActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey  , Rider"
        android:textSize="30sp"
        android:background="#8D9CE8"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:paddingLeft="40dp"
        android:paddingRight="30dp"
        android:layout_marginTop="30dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email Address"
        android:id="@+id/emailRider"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:layout_marginTop="30dp"
        android:id="@+id/passwordRider"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="20sp"
        android:background="#F0EFDD39"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/loginRider"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="20sp"
        android:background="#F0EFDD39"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/signupRider"/>

</LinearLayout>
